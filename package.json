{
  "name": "psim-project",
  "private": true,
  "workspaces": [
    "packages/client",
    "packages/server",
    "packages/shared"
  ],
  "scripts": {
    "start": "npx lerna run start --scope=server",
    "build:server": "npx lerna run build --scope=server",
    "build:client": "npx lerna run build --scope=client",
